{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Reset password request schema",
    "required": [
        "oldPassword",
        "newPassword"
    ],
    "properties": {
      "oldPassword": {
        "type": "string",
        "description": "The user's oldPassword.",
        "pattern": "^(?=.*?[a-zA-Z])(?=.*?[0-9]).{10,}$"
      },
      "newPassword": {
        "type": "string",
        "description": "The user's oldPassword.",
        "pattern": "^(?=.*?[a-zA-Z])(?=.*?[0-9]).{10,}$"
      }
    }
  }